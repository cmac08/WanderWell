<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WanderWell"
        tools:targetApi="31">
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WanderWell">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.VacationList"
            android:exported="true"
            android:theme="@style/Theme.WanderWell.NoActionBar">
        </activity>
        <activity android:name=".UI.VacationDetails"
            android:exported="true"
            android:theme="@style/Theme.WanderWell">
        </activity>
        <activity android:name=".UI.ExcursionDetails"
            android:exported="true"
            android:theme="@style/Theme.WanderWell">
        </activity>
        <activity android:name=".UI.SearchResultsActivity"
            android:exported="true"
            android:theme="@style/Theme.WanderWell">
        </activity>
    </application>

</manifest>